/* pages/productlist/productlist.wxss */

.about_page {
	margin: 0 10px;
}

.swiper-tab {
	width: 27%;
	overflow: hidden;
	position: fixed;
	left: 0;
	top: 108rpx;
}

.swiper-tab-item {
	width: 95%;
	text-align: center;
	line-height: 75rpx;
	background-color: #eaeaea;
	border-bottom: 1px solid white;
}

.active {
	background-color: white;
	box-shadow: 0 0 3px 3px #eaeaea;
}

.juzhong {
	margin: 0 auto;
}

.domain {
	background-color: #fff;
	height: 100%;
	margin: 0 10px;
}

.show {
	width: 100%;
	overflow-y: scroll;
	display: block;
}

.hidden {
	display: none;
}

.big {
	width: 72%;
	overflow: hidden;
	margin-left: 27%;
}

.big .titleb {
	width: 100%;
	overflow: hidden;
	text-align: center;
	margin-top: 22.5rpx;
}

.big .titleb .bor {
	display: inline-block;
	width: 150rpx;
	border-top: 1px solid #767676;
	height: 7.5rpx;
}

.big .productb {
	width: 100%;
	overflow: hidden;

}

.big .productb .prolis {
	width: 48%;
	float: left;
	margin: 18.75rpx 1%;
	text-align: center;
}

.big .productb .prolis .products {
	/*width: 100%;*/
	width: 210rpx;
	height: 210rpx;
	border-radius: 5px;
	overflow: hidden;
	margin-bottom: 11.25rpx;
}

.big .productb .prolis .products image {
	width: 100%;
}

.big .productb .prolis .op {
	font-size: 24rpx;
	color: #434343;
	/* text-align: center; */
	text-align: left;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	clear: both;
}

.titleb {
	width: 100%;
	overflow: hidden;
	text-align: center;
	margin-top: 22.5rpx;
}

.titleb .bor {
	display: inline-block;
	width: 150rpx;
	border-top: 1px solid #767676;
	height: 7.5rpx;
}

/* 滑动 */
.huadong_Wrap {
	width: 73%;
	height: 98rpx;
	background: #fff;
	padding: 0 24rpx;
	box-sizing: border-box;
	border-bottom: 1px solid #eaeaea;
	position: fixed;
	top: 108rpx;
	z-index: 100;
}

.huadong_Wrap view {
	display: inline-block;
	line-height: 94rpx;
	font-size: 30rpx;
	color: #222;
	padding: 0 30rpx;
}

.tabOn {
	color: #b90300 !important;
	border-bottom: 4rpx solid #b90300;
}

.price .zekou {
	float: left;
	color: #000;
	font-size: 22rpx;
}

.price .yuanjia1 {
	float: left;
	text-decoration: line-through;
	color: #e1e1e1;
	font-size: 20rpx;
	margin-left: 10rpx;
}

.search_Wrap {
	width: 100%;
	height: 108rpx;
	padding: 18rpx 30rpx;
	box-sizing: border-box;
	position: relative;
	position: fixed;
	top: 0;
	z-index: 500;
	background-color: #fff;
}

.seach_pic {
	width: 24rpx;
	height: 24rpx;
	display: inline-block;
	vertical-align: middle;
	position: absolute;
	top: 0;
	left: 265rpx;
	bottom: 0;
	margin: auto;
}

.search_Wrap input {
	font-size: 27rpx;
	height: 100%;
	display: inline-block;
	vertical-align: middle;
	width: 100%;
	text-align: center;
	padding: 0 45rpx;
	border-radius: 5px;
	box-sizing: border-box;
	background: #f4f6f8;
}

.delete {
	font-size: 30rpx;
	color: #80c94e;
	float: right;
	line-height: 72rpx;
}