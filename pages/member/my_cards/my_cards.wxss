page {
  height: 100%;
  background: #fafafa;
  padding: 30rpx;
  box-sizing: border-box;
}

.wrap {
  width: 100%;
}

.card_wrap {
  width: 100%;
  height: 400rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.card_wrap image {
  width: 100%;
  height: 400rpx;
  display: block;
  margin: 0 auto;
  border-radius: 8px;
}

.card_text {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  line-height: 60rpx;
  box-sizing: border-box;
  padding: 18.5% 3% 0 7%;
}

.card_title {
  font-size: 36rpx;
  color: #f1f1f1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cardPrice {
  color: #f1f1f1;
  font-size: 28rpx;
  margin-bottom: 49rpx;
}

.gongsiName {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  font-size: 24rpx;
  text-align: right;
  line-height: 35rpx;
}

.card_corner {
  width: 138rpx;
  height: 41rpx;
  line-height: 41rpx;
  text-align: center;
  color: #1a1a1d;
  background: #ffea0a;
  position: absolute;
  right: -3rpx;
  top: 12%;
  box-shadow: 3px 3px 5px #666;
  font-size: 24rpx;
}
