.states{
	width: 100%;
	background: -webkit-linear-gradient(left, #fd952f , #f2703b); /* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(right, #fd952f , #f2703b); /* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(right, #fd952f , #f2703b); /* Firefox 3.6 - 15 */
	background: linear-gradient(to right, #fd952f , #f2703b); /* 标准的语法 */
	overflow: hidden;
	padding-bottom: 60rpx;
}

.states view{
	color: white;
	width: 90%;
	margin-left: 5%;
  font-size:26.25rpx; 
}

.getpeop{
	width: 95%;
	margin-left: 2.5%;
	overflow: hidden;
	background-color: white;
	border-radius: 5px;
	margin-top: -30rpx;
	padding: 18.75rpx 0;
	border: 1px solid #f0f3f5;
	box-shadow: 0 0 2px 2px #f0f3f5;
}

.getpeop view{
	width: 90%;
	margin-left: 5%;
	line-height: 37.5rpx;
  font-size:26.25rpx; 
}

.orders{
	width: 95%;
	overflow: hidden;
	margin: 11.25rpx auto;
}

.orders .aa{
	width: 98%;
	overflow: hidden;
	border: 1px solid #E5E5E5;
	border-radius: 5px;
	padding: 22.5rpx 0;
	margin: 11.25rpx auto;
	background-color: white;
}

.orders .aa .wlstate{
	width:95%;
	margin-left:2.5%;
  font-size: 26.25rpx;
}

.orders .aa .single{
	width:100%;
	overflow:hidden;
	margin-top:11.25rpx;
}

.orders .aa .omg{
	width: 112.5rpx;
	height: 112.5rpx;
	border-radius: 5px;
	overflow: hidden;
	float: left;
	margin: 13.5rpx 13.5rpx;
	border: 1px solid #E5E5E5;
}

.orders .aa .omg image{
	width: 100%;
}

.orders .aa .inf{
	width: 75%;
	float: left;
	overflow: hidden;
}

.orders .aa .inf .nns{
	font-size: 26.25rpx;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	overflow: hidden;
	text-overflow: ellipsis;
	margin-top:11.25rpx;
}

.orders .aa .ospan text {
    color: #b9b9b9;
    margin-right: 0.5rem;
    font-size: 24rpx; 
}

.orders .aa .prize,.orders .aa .how{
	text-align: right;
	margin-top: 15rpx;
}

.orders .aa .price{
	width: 25%;
	float: left;
	text-align: center;
	color: #ff5044;
  font-size: 26.25rpx;
  margin-top: 10rpx;
}
.orders .aa  .how text{
	display: inline-block;
	height: 52.5rpx;
	padding: 0 11.25rpx;
	border-radius: 56.25rpx;
	line-height: 52.5rpx;
	font-size: 26.25rpx;
	width: 112.5rpx;
	text-align: center;
}

.orders .aa .how text.del{
	border: 1px solid #b7b7b7;
	color: #b7b7b7;
	margin-top: 11.25rpx;
	margin-right: 11.25rpx;
}

.orders .aa .how text.pays,.orders .aa .how .pays{
		display: inline-block;
	height: 52.5rpx;
	padding: 0 11.25rpx;
	border-radius: 56.25rpx;
	line-height: 52.5rpx;
	font-size: 26.25rpx;
	width: 112.5rpx;
	text-align: center;
  color: #ff837b;
  border: 1px solid #ff837b;
  margin-right: 10rpx;
}

.orders .aa .how text.pays a{
	color: #ff837b;
}

.abig{
	width:100%;
	overflow:hidden;
}

.abig .do{
	width:78%;
	overflow:hidden;
  float: left;
  margin-top: 0rpx;
}

.orders .aa .how form{
display: inline-block;
height: 52rpx;
padding: 0 11.25rpx;
width: 112.5rpx;
text-align: center;
/* color: #b7b7b7; */
margin-top: 11.25rpx;
margin-right: 11.25rpx;
position: relative;
background-color: white;
border: none;
}

.orders .aa .how form button{
width: 100%;
height: 100%;
color: #ff837b;
outline: none;
background-color: white;
margin: 0;
padding: 0;
line-height: 50rpx;
font-size: 22.5rpx;
position: absolute;
left: 0;
bottom: -18rpx;
border: 1px solid #ff837b;
border-radius: 56.25rpx;
box-sizing:initial;
}