/* pages/xgaddress/xgaddress.wxss */
.address{
	width: 90%;
	overflow: hidden;
	border-radius: 5px;
	border: 1px solid #E5E5E5;
	margin-left: 5%;
	margin-top: 11.25rpx;
	position: relative;
	background-color: white;
  padding-bottom: 11.25rpx;
}

.address .addb{
	display: block;
	width: 100%;
	overflow: hidden;
}

.address .addb .adda{
	width: 37.5rpx;
	float: left;
	margin-top: 37.5rpx;
	margin-left: 75rpx;
}

.address .addb text{
	float: left;
	margin-top: 37.5rpx;
	margin-left: 37.5rpx;
	color: #b2b2b2;
}


.address .imgbor{
	width: 100%;
	position: absolute;
	bottom: 0;
	left: 0;
}

.address .lefts{
	width: 78%;
	float: left;
	overflow: hidden;
	margin-left: 2.5%;
}

.address .rightsb{
	width: 75rpx;
	float: right;
	overflow: hidden;
	margin-right: 2.5%;
	margin-top: 11.25rpx;
}

.address .people{
	width: 100%;
	margin-top: 11.25rpx;
	overflow: hidden;
	float: left;
  margin-bottom: 11.25rpx;
}

.address .place{
	margin-top: 11.25rpx;
	overflow: hidden;
	line-height: 37.5rpx;
	width: 100%;
}

.address .cirs{
	width: 1rem;
	float: right;
	margin-right: 2.5%;
	text-align: center;
	font-size:  37.5rpx;
	font-weight: 600;
	color: #acacac;
}

.address .change{
	display: none;
	background-color: #878787;
	border-bottom-left-radius: 75rpx;
	border-bottom-right-radius: 75rpx;
	border-top-left-radius: 75rpx;
	border-top-right-radius: 75rpx;
	width: 60rpx;
	float: right;
	margin-right: 2.5%;
	height: 112.5rpx;
	text-align: center;
}

.address .change .icon{
	display: block;
	width: 100%;
	height: 50%;
	text-align: center;
}


.address .changes{
	display: block;
	width: 15%;
	float: right;
	margin-right: 2.5%;
	height: 112.5rpx;
	text-align: center;
}

.address .changes image{
	width: 75rpx;
	margin-top: 18.75rpx;
}

.address .change image{
	width: 26.25rpx;
  height: 60rpx;
	margin-top: 7.5rpx;
}

.address .people text{
	display: block;
	width: 50%;
	float: left;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.bnts{
	width: 95%;
	height: 75rpx;
	border-radius: 37.5rpx;
	background-color: #ff5637;
	margin-left: 2.5%;
	overflow: hidden;
	margin-top: 37.5rpx;
}

.bnts button{
	width: 100%;
	height: 100%;
	background-color:#ff5637;
	color: white;
	border: none;outline: none;
  font-size: 26.25rpx;
}
