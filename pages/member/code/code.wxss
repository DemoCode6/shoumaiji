/* pages/code/code.wxss */
page{
  width: 100%;
  height: 100%;
}

.code{
  width: 96%;
  height: 96%;
  margin: 2%;
  background-color: #dfedff;
  border-radius: 5px;
}

.logo_con{
  width: 100%;
  overflow: hidden;
  text-align: center;
}

.logo_con image{
  width: 280rpx;
  height: 160rpx;
  margin-top: 30rpx;
}

.code .ll{
  font-size: 30rpx;
  text-align: center;
  display: inline-block;
  width: 100%;
}

.code_cont{
  width: 385rpx;
  height: 385rpx;
  margin:35rpx auto;
  position: relative;
}

.code_cont image{
  width: 95%;
  height: 95%;
  margin: 2.5%;
  /* border-radius: 100%; */
}

.people{
  width: 525rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: -100rpx;
}

.people image{
  height: 265rpx;
  width: 100%;
}

.concat{
	width: 94%;
	margin-left: 3%;
	height:144.75rpx;
  margin-top: 40rpx;
}

.concat .call{
	width: 44%;
	margin-left: 1%;
	float: left;
	padding: 15rpx 0;
  height: 40rpx;
}

.concat image{
	width: 39.75rpx;
  height: 39.75rpx;
	float: left;
}

.concat text{
	line-height: 39.75rpx;
	margin-left: 11rpx;
  font-size: 24rpx;
}

.concat .add{
	width: 99%;
	margin-left: 1%;
	float: left;
	padding: 15rpx 0;
}

.tip{
  display: block;
  width: 100%;
  text-align: center;
  color: #ff0000;
  font-size: 24rpx;
  margin-top: 45rpx;
}